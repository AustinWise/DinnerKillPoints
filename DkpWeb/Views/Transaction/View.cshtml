@model Austin.DkpLib.Transaction
@{
    ViewBag.Title = "View Transaction";
}
<h2>Transaction: @Model.Description</h2>

<table>
    <tr>
        <th>Creditor</th>
        <td>@Html.ActionLink(Model.Creditor.ToString(), "Detail", "People", new { id = Model.CreditorID }, null)</td>
    </tr>
    <tr>
        <th>Debtor</th>
        <td>@Html.ActionLink(Model.Debtor.ToString(), "Detail", "People", new { id = Model.DebtorID }, null)</td>
    </tr>
    <tr>
        <th>Amount</th>
        <td>@((Model.Amount / 100d).ToString("C"))</td>
    </tr>
    <tr>
        <th>Bill Split</th>
        <td>@(Model.BillID.HasValue ? Model.BillID.Value.ToString() : "")</td>
    </tr>
    <tr>
        <th>Created</th>
        <td>@Model.Created</td>
    </tr>
</table>
@if (Roles.IsUserInRole("Admin"))
{
    using (Html.BeginForm("Delete", "Transaction", new { id = @Model.ID }, FormMethod.Post))
    {
        <input id="submit" type="submit" value="Delete" />
    }
}