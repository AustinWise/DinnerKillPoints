@model DkpWeb.Models.TransactionList

@{
    ViewBag.Title = "Index";
}
<h2>Transactions</h2>
@if (Startup.IsUserInRole("DKP"))
{
    @Html.ActionLink("Add", "Add")
}
<table>
    <tr>
        <th>Debtor
        </th>
        <th>Creditor
        </th>
        <th>Amount
        </th>
        <th>Description
        </th>
        <th>Date
        </th>
        <th>Details
        </th>
    </tr>
    @foreach (var t in Model.Transactions)
    {
        <tr>
            <td>
                @Html.ActionLink(t.Debtor.FirstName + " " + t.Debtor.LastName, "Detail", "People", new { id = t.DebtorID }, null)
            </td>
            <td>
                @Html.ActionLink(t.Creditor.FirstName + " " + t.Creditor.LastName, "Detail", "People", new { id = t.CreditorID }, null)
            </td>
            <td>
                @(((double)t.Amount / 100d).ToString("c"))
            </td>
            <td>
                @t.PrettyDescription
            </td>
            <td>
                @t.Created
            </td>
            <td>
                @Html.ActionLink("Details", "View", new { id = @t.ID })
            </td>
        </tr>
    }

</table>

@Html.Pager(DkpWeb.Models.TransactionList.PageSize, Model.CurrentPage, Model.TotalItems)
